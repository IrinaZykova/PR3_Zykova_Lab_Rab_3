<script>
$(document).ready(function () {
$("button").click(function () {
var i=1;
do{
$(".p2").fadeToggle();
i++;
if(i%2==0){
$(".p1").fadeToggle();}
}
while(i<1000)
$(".p1").hide();
});
});
</script>
